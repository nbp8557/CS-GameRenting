<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="entities.Game" table="Game">
		<meta attribute="class-description">
			This class contains the game detail.
		</meta>

		<id name="gameID" type="int" column="GameID">
			<generator class="native" />
		</id>

		<property name="rentable" column="Rentable" type="boolean" />
		<property name="name" column="Name" type="string" />
		<property name="consoleID" column="ConsoleID" type="int" />

	</class>
</hibernate-mapping>